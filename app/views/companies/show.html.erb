<h1 class="text-2xl font-semibold mb-4">Detalle de Compañía</h1>

<div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <p><strong>Nombre:</strong> <%= @company.name %></p>
  <p><strong>Correo de contacto:</strong> <%= @company.contact_email %></p>
  <p><strong>Plan de membresía:</strong> <%= @company.membership_plan&.name %></p>
  <p><strong>Usuarios permitidos:</strong> <%= @company.users_limit %></p>
  <p><strong>Activa hasta:</strong> <%= @company.active_until %></p>
  <p><strong>Activa:</strong> <%= @company.active? ? "Sí" : "No" %></p>
  <p><strong>Es proveedor/is_provider:</strong> <%= @company.is_provider? ? "Sí" : "No" %></p>
</div>

<div class="flex space-x-2 mt-4">
  <%= link_to "Editar", edit_company_path(@company), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded" %>
  <%= link_to "Volver a compañías", companies_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded" %>
  <%= link_to "Cambiar/Activar Plan de Membresía", select_plan_company_path(@company),
    class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded" %>
</div>
