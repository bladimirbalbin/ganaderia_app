<h1 class="text-2xl font-bold mb-6">Detalle del Cliente</h1>

<div class="bg-white p-6 rounded shadow space-y-2">
  <p><strong>ID:</strong> <%= @customer.id %></p>
  <p><strong>Tipo:</strong> <%= @customer.customer_type.titleize %></p>
  <p><strong>Nombre completo:</strong> <%= [@customer.first_name, @customer.middle_name, @customer.last_name, @customer.second_last_name].compact.join(' ') %></p>
  <p><strong>Documento:</strong> <%= "#{@customer.document_type} #{@customer.document_number}" %></p>
  <p><strong>Teléfonos:</strong> <%= [@customer.mobile_phone1, @customer.mobile_phone2, @customer.landline_phone].compact.join(' / ') %></p>
  <p><strong>Email:</strong> <%= @customer.company.contact_email %></p>
  <p><strong>Dirección:</strong> <%= [@customer.address1, @customer.address2].compact.join(', ') %></p>
</div>

<div class="mt-4 space-x-2">
  <%= link_to "Editar", edit_customer_path(@customer), class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600" %>
  <%= link_to "Volver", customers_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
</div>
