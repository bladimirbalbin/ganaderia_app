<div class="form-section max-w-3xl mx-auto bg-white p-8 rounded-lg shadow-md">
  <h1 class="text-3xl font-bold mb-6 text-gray-800">Editar perfil</h1>
  <p class="mb-6 text-gray-500">Aquí puedes actualizar tu correo electrónico o cambiar tu contraseña.</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded px-3 py-2" %>
      </div>
    </div>

    <h2 class="text-xl font-semibold mt-6 mb-4 border-b pb-2">Cambio de contraseña</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= f.label :password, "Nueva contraseña", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2" %>
        <p class="text-gray-500 text-sm mt-1">Dejar en blanco si no deseas cambiarla</p>
      </div>
      <div>
        <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2" %>
      </div>
    </div>

    <div class="mt-4">
      <%= f.label :current_password, "Contraseña actual", class: "block text-gray-700 font-medium mb-2" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded px-3 py-2" %>
      <p class="text-gray-500 text-sm mt-1">Es necesario ingresar la contraseña actual para confirmar los cambios</p>
    </div>

    <div class="mt-8 flex justify-end space-x-4">
      <%= f.submit "Actualizar perfil", class: "bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 transition" %>
      <%= link_to "Cancelar", root_path, class: "bg-gray-300 text-gray-800 px-5 py-2 rounded hover:bg-gray-400 transition" %>
    </div>
  <% end %>

  <hr class="my-6">

  <div class="flex justify-end">
    <%= button_to "Eliminar mi cuenta", registration_path(resource_name), method: :delete, data: { confirm: "¿Estás seguro que deseas eliminar tu cuenta?" }, class: "bg-red-600 text-white px-5 py-2 rounded hover:bg-red-700 transition" %>
  </div>
</div>
