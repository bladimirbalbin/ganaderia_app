<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-blue-100">
  <div class="bg-white p-8 sm:p-10 rounded-2xl shadow-xl w-full max-w-md">
    <!-- Logo -->
    <div class="flex justify-center mb-6">
      <%= image_tag("logo.png", alt: "Logo", class: "h-16") if Rails.root.join("app/assets/images/logo.png").exist? %>
    </div>

    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Iniciar sesión</h2>

    <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>
      <div class="mb-4">
        <%= f.label :email, "Correo electrónico", class: "block text-gray-700 mb-1" %>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
            <i class="fas fa-envelope"></i>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>
      </div>

      <div class="mb-4">
        <%= f.label :password, "Contraseña", class: "block text-gray-700 mb-1" %>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
            <i class="fas fa-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" %>
        </div>
      </div>

      <div class="flex items-center justify-between mb-6">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, "Recuérdame", class: "text-gray-600 text-sm" %>
        </div>
        <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name),
            class: "text-sm text-blue-500 hover:underline" %>
      </div>

      <%= f.submit "Iniciar sesión",
          class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 rounded-lg shadow-md transition duration-200" %>
    <% end %>

    <p class="mt-6 text-center text-gray-600 text-sm">
      ¿No tienes cuenta?
      <%= link_to "Registrarse", new_registration_path(resource_name),
          class: "text-blue-500 hover:underline font-medium" %>
    </p>
  </div>
</div>
