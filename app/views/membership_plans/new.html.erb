<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Crear Nuevo Plan de Membresía</h1>
      <p class="mt-2 text-sm text-gray-600">Configura un nuevo plan para las empresas del sistema</p>
    </div>

    <!-- Form -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-8">
        <%= form_with(model: @plan, local: true) do |form| %>
          <% if @plan.errors.any? %>
            <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
              <h2 class="font-semibold"><%= pluralize(@plan.errors.count, "error") %> impidió guardar el plan:</h2>
              <ul class="list-disc ml-5 mt-2">
                <% @plan.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Nombre del Plan -->
          <div class="mb-6">
            <%= form.label :name, "Nombre del Plan", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name, placeholder: "Ej: Plan Básico, Plan Profesional", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <!-- Descripción -->
          <div class="mb-6">
            <%= form.label :description, "Descripción", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_area :description, rows: 3, placeholder: "Describe las características y beneficios del plan", 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <!-- Precio -->
          <div class="mb-6">
            <%= form.label :price, "Precio (COP)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :price, placeholder: "50000", min: 0, step: 1000,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <!-- Límite de Usuarios -->
          <div class="mb-6">
            <%= form.label :users_limit, "Límite de Usuarios", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :users_limit, placeholder: "10", min: 1,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <!-- Duración en Días -->
          <div class="mb-6">
            <%= form.label :duration_in_days, "Duración (días)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :duration_in_days, placeholder: "30", min: 1,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
          </div>

          <!-- Estado Activo -->
          <div class="mb-6">
            <div class="flex items-center">
              <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
              <%= form.label :active, "Plan Activo", class: "ml-2 block text-sm text-gray-700" %>
            </div>
            <p class="mt-1 text-sm text-gray-500">Los planes inactivos no estarán disponibles para las empresas</p>
          </div>

          <!-- Botones -->
          <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
            <%= link_to "Cancelar", membership_plans_path, 
                class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            <%= form.submit "Crear Plan", 
                class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
