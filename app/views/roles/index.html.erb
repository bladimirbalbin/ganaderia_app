<h1 class="title">Roles</h1>

<div class="overflow-x-auto shadow rounded-lg">
  <table class="min-w-full divide-y divide-gray-200 border border-gray-300">
    <thead class="bg-gray-100">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-gray-400">
          Nombre
        </th>
        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-gray-400">
          Descripción
        </th>
        <th scope="col" class="px-6 py-3 text-left text-sm font-semibold text-gray-400">
          Acciones
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @roles.each do |role| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">
            <%= role.name %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-gray-700">
            <%= role.description %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap space-x-2">
            <%= link_to "Ver", role, class: "inline-block px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 text-sm" %>
            <%= link_to "Editar", edit_role_path(role), class: "inline-block px-3 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 text-sm" %>
            <%= link_to "Eliminar", role, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "inline-block px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600 text-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4">
  <%= link_to "Nuevo rol", new_role_path, class: "btn-primary" %>
</div>
