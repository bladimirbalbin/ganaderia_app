<div class="max-w-xl mx-auto bg-white p-8 rounded shadow-md">
  <h1 class="text-2xl font-semibold mb-6 text-gray-800">Cambiar contraseña</h1>
  <p class="mb-6 text-gray-500">Por favor, ingresa tu nueva contraseña y confírmala.</p>

  <%= form_with(model: @user, url: change_password_user_path(@user), local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :password, "Nueva contraseña", class: "block text-gray-700 font-medium mb-2" %>
      <%= form.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" %>
    </div>
    <div class="mb-6">
      <%= form.label :password_confirmation, "Confirmar nueva contraseña", class: "block text-gray-700 font-medium mb-2" %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" %>
    </div>

    <div class="flex justify-end space-x-4">
      <%= form.submit "Actualizar contraseña", class: "bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700 transition" %>
      <%= link_to "Cancelar", users_path, class: "bg-gray-300 text-gray-800 px-5 py-2 rounded hover:bg-gray-400 transition" %>
    </div>
  <% end %>
</div>
