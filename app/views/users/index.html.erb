<%# app/views/users/index.html.erb %>
<h1 class="text-2xl font-semibold mb-4">Usuarios</h1>

<table class="table-default">
  <thead class="bg-gray-100">
    <tr>
      <th class="th-default">Email</th>
      <th class="th-default">Rol</th>
      <th class="th-default">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="tr-hover">
        <td class="td-default"><%= user.email %></td>
        <td class="td-default"><%= user.role&.name || "-" %></td>
        <td class="td-default"><%= user.company&.name || "-" %></td>
        <td class="td-default space-x-2">
          <%= link_to "Ver", user_path(user), class: "btn-primary" %>
          ...
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mt-4">
  <%= link_to "Nuevo usuario", new_user_path, class: "btn-primary" %>
</div>
